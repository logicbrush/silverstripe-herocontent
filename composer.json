{
	"name": "logicbrush/silverstripe-herocontent",
	"description": "A module for the SilverStripe CMS which allows you to add a big block of important content at the top of the page.",
	"homepage": "https://www.logicbrush.com/specialities/silverstripe-development/",
	"type": "silverstripe-vendormodule",
	"keywords": [
		"silverstripe",
		"hero",
		"banner"
	],
	"license": "BSD-3-Clause",
	"authors": [{
		"name": "John Learn",
		"email": "jflearn@logicbrush.com"
	}],
	"require": {
		"php": "^7.2||^8.0",
		"silverstripe/cms": "^4.0||^5.0",
		"silverstripe/asset-admin": "*",
		"symbiote/silverstripe-gridfieldextensions": "*",
		"jonom/focuspoint": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.0||^9.5",
		"silverstripe/sqlite3": "*",
		"logicbrush/metrics": "*",
		"cmrcx/phptidy": "*"
	},
	"autoload": {
		"psr-4": {
			"Logicbrush\\HeroContent\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Logicbrush\\HeroContent\\Tests\\": "tests/"
		}
	},
	"extra": {
		"expose": [
			"client/dist"
		]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"silverstripe/vendor-plugin": true
		}
	}
}
